let replies = []; // Inicial vacÃ­o

// URL de tu JSON en GitHub
const jsonUrl = "https://raw.githubusercontent.com/Moradtest/mrd-prueba/main/replies.json";

// Cargar JSON al inicio
fetch(jsonUrl)
  .then(response => response.json())
  .then(data => {
      replies = data;
      render(); // renderizar panel con nuevas respuestas
  })
  .catch(err => console.error("Error cargando JSON:", err));
